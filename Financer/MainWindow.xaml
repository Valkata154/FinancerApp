<Window x:Class="Financer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Financer"
        mc:Ignorable="d"
        Title="Financer" Height="250" Width="400"
        ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="/Images/watchlistBackground.png"></ImageBrush>
    </Window.Background>
    <Grid>
        <Label Content="Financer"  Foreground="White" Name="lblTitle" Margin="125,0,133,25" FontFamily="Times New Roman" FontSize="30" FontWeight="Bold" />
        <Button Content="Watchlist"  Foreground="White" BorderBrush="White" BorderThickness="2" Name="btnOpenWatchlist" Click="OpenWatchlist" Width="110" Height="40" Background="Transparent" FontWeight="Bold" FontSize="14"  Margin="130,66,142,100"/>
        <Button Content="Alarms" Foreground="White" BorderBrush="White" BorderThickness="2" Name="btnCreateAlarm" Click="CreateAlarm" Width="110" Height="40" Background="Transparent" FontWeight="Bold" FontSize="14"  Margin="130,129,142,40"/>
    </Grid>
</Window>
